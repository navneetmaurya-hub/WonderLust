

<% layout("/layouts/boillerplate") %>

<div class="container mt-4">
    
    <div class="row g-4">
       <% for (let listing of allListings) { %>  
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card h-100 listing-card shadow-sm">
                <a href="/listings/<%= listing._id %>">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 250px; object-fit: cover;">
                </a>
                <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text"><%= listing.description.substring(0, 70) %>...</p>
                    <p class="card-price">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
                    <p class="card-location"><%= listing.location %>, <%= listing.country %></p>
                </div>
            </div>
        </div>
       <% } %>
    </div>
</div>

   